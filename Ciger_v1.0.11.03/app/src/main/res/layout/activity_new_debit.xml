<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Spinner
        android:layout_marginStart="5px"
        android:layout_marginBottom="5px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_debit"
        android:layout_marginTop="5dp"
        android:entries="@array/spinner_debit_type"
        android:prompt="@string/debit_type_prompt"
        android:splitMotionEvents="false"
        android:spinnerMode="dialog"
        android:layout_weight="0.05"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etxt_debit_desc"
        android:hint="@string/debit_desc"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="8"
            android:textSize="18sp"
            android:hint="@string/debit_date"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_debit_date"
            android:layout_weight="2"
            android:text="@string/debit_date"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcre"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="@string/debit_credit"
            />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>